<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- For app-specific files in internal storage -->
    <files-path
        name="files"
        path="." />
    
    <!-- For app-specific files in external storage -->
    <external-files-path
        name="external_files"
        path="." />
    
    <!-- For cache files -->
    <cache-path
        name="cache"
        path="." />
    
    <!-- For external storage (legacy) -->
    <external-path
        name="external"
        path="." />
    
    <!-- For external media files (Android 10+) -->
    <external-media-path
        name="media"
        path="." />
</paths>
